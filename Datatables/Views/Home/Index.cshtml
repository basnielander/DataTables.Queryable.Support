@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <h2>Order CRUD Operations</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="float-right">
                <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("UpdateOrAddTodo","Home")')"><i class="fa fa-plus"></i> Add New ToDo</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="gridTodo" name="gridTodo" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="col-md-5">Todo</th>
                        <th class="col-md-5">Van</th>
                        <th class="col-md-5">Duur</th>
                        <th class="col-md-2"></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Todo</th>
                        <th>Van</th>
                        <th>Duur</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

</div>
